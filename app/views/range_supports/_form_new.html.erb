<div class="modal-dialog modal-md">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= t ".title" %></h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <%= form_for range_support, remote: true do |f| %>
      <%= hidden_field_tag :organization_id, @organization.slug %>
      <div class="modal-body">
        <div class="form-group col-md-10 push-md-1">
          <label class="col-md-3 control-label label-bold">
            <%= t ".style_range" %>
            <span class="text-danger">*</span>
          </label>
          <label class="col-md-3 control-label push-md-4 label-bold">
            <%= t ".operator" %>
            <span class="text-danger">*</span>
          </label>
          <div class="form-group row">
            <%= f.select :style, option_select_custom(RangeSupport.styles,
              RangeSupport.styles[range_support.style]),
              {}, {class: "form-control select_custom col-md-5"} %>
            <span class="text-center col-md-2">
            </span>
            <%= f.select :operator, option_select_custom(RangeSupport.operators,
              RangeSupport.operators[range_support.operator]),
              {}, {class: "form-control select_custom col-md-5"} %>
            <span class="text-center col-md-2">
          </div>
        </div>
        <div class="form-group col-md-10 push-md-1">
          <label class="col-md-3 control-label label-bold">
            <%= t ".range_support" %>
            <span class="text-danger">*</span>
          </label>
          <div class="form-group row">
            <%= f.number_field :value_from, required: true,
              class: "form-control input-text input-pad-8-12 col-md-5" %>
            <span class="text-center col-md-2" id="span-icon">
              <h3><i class="fa fa-angle-right"></i></h3>
            </span>
            <%= f.number_field :value_to, required: true,
              class: "form-control input-text input-pad-8-12 col-md-5" %>
          </div>
        </div>
      </div>
      <div class="modal-footer text-center">
        <%= f.button label_button_submit(params[:action]), type: :submit, class: "btn btn-breez" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t "close" %></button>
      </div>
    <% end %>
  </div>
</div>
<%= include_gon %>
<%= javascript_include_tag "option_range_support" %>
