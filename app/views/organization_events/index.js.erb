$('#list-events').append('<%= j render partial: "organizations/item_event",
  collection: @organization_event, as: :event %>')
<% if @organization_event.current_page == @organization_event.total_pages %>
  $('#load-event-organization').remove();
<% else %>
  $('#load-event-organization').attr('href',
    '<%= organization_events_path(page: @organization_event.next_page, id: @organization.slug) %>');
<% end %>
