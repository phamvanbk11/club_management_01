<% if params[:append] %>
  $('#list-events').append('<%= j render partial: "organizations/item_event",
    collection: @organization_event, as: :event %>')
<% else %>
  $('#list-events').html('<%= j render partial: "organizations/item_event",
    collection: @organization_event, as: :event %>')
<% end %>
<% if @organization_event.current_page == @organization_event.total_pages %>
  $('#next_page_time_line').remove();
<% else %>
  $('#next_page_time_line').val(<%= @organization_event.next_page %>);
<% end %>
