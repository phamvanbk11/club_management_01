<div class="infor-title ui-block-title">
  <h6 class="title">
    <div class="row">
      <div class="col-md-10">
        <span class="title"><%= t "organizations.index.member" %>:</span>
      </div>
      <div class="col-md-2">
        <strong class="organization-club pull-right"><%= @organization.users.size %></strong>
      </div>
    </div>
  </h6>
</div>
<div class="list-infor ui-block-content">
  <ul class="organization-list-infor widget w-personal-info item-block">
    <li>
      <div class="row">
        <% take_member(@organization, Settings.max_display_member_organization).each do |member| %>
          <div class="col-md-2 avarta-memeber">
            <%= link_to user_path(member.id) do %>
              <%= image_tag member.user_avatar, class: "member-organization-view",
                title: "#{member.user_full_name}" %>
            <% end %>
          </div>
        <% end %>
        <% if @organization.users.size > Settings.max_display_member_organization %>
          <div class="col-md-4">
            <%= link_to set_user_organization_path(@organization), data: {toggle: "modal"}, remote: :true,
              class: "organization-load-user" do %>
              <%= t "read_more" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </li>
  </ul>
</div>
