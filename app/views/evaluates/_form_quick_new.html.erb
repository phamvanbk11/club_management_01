<div class="modal-dialog modal-lg">
  <div class="modal-content modal-report-detail">
    <div class="modal-header">
      <h4 class="modal-title text-center col-md-12">
        <%= t ".new_evaluate" %>
      </h4>
      <%= button_tag type: "button", class: "close btn-close-modal",
        data: {dismiss: "modal"} do %>
        &times;
      <% end %>
    </div>
    <% if @quick %>
      <div class="alert alert-success text-center" id="success-alert">
        <%= t "evaluates.list_evaluates.quick_new_message", month: @evaluate.time, year: @evaluate.year %>
      </div>
    <% end %>

    <%= form_for [@club, Evaluate.new], remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <div class="row">
            <div class="col-md-4 push-md-1 month">
              <label for="contact-name"><%= t "month" %></label></br>
              <%= select_tag "time", options_for_select(option_select(
                StatisticReport.months), Date.current.month), class: "form-control select_custom" %>
            </div>
            <div class="col-md-4 push-md-2 year">
              <label for="contact-name"><%= t "year" %></label></br>
              <%= select_year( Date.current, {start_year: Settings.year_ago.years.ago.year,
                end_year: Date.current.year}, {class: "select_custom form-control stype-reports"}) %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= render "rule_fields" %>
        </div>
      </div>
      <div class="modal-footer text-center">
        <%= f.button label_submit(params[:action]), type: :submit, class: "btn btn-sm btn-breez btn-create-type" %>
        <%= button_tag t("close"), data: {dismiss: "modal"}, class: "btn btn-sm btn-primary btn-create-type" %>
      </div>
    <% end %>
  </div>
</div>
<%= javascript_include_tag "quick_evaluate" %>
