<% if flash[:success] %>
  $('#modal-edit-album').modal('hide');
  $('.show-album-<%= @album.id %>').replaceWith('<%= j render partial: "album", locals: {album: @album} %>')
<% else %>
  $('.album-errors').html('<%= j render "album_errors" %>');
<% end %>
$('.container').append('<%= j render "shared/flash_warning" %>');
$('.notify').delay(4000).slideUp(300);
