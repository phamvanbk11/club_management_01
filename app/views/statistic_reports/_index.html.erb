<%= stylesheet_link_tag "tabs" %>
<div class="ui-block col-md-12">
  <div class="infor-request ui-block-title">
    <ul class="tabs">
      <li class="tab-link current" data-tab="pending">
        <b><%= t "pending" %></b>
      </li>
      <li class="tab-link" data-tab="approved">
        <b><%= t "approved" %></b>
      </li>
      <li class="tab-link" data-tab="rejected">
        <b><%= t "rejected" %></b>
      </li>
      <li class="tab-link" data-tab="not_report">
        <b><%= t "not_report" %></b>
      </li>
    </ul>
    <div class="pull-right funtion-request">
      <%= hidden_field_tag :organization_id, @organization.slug %>
      <%= link_to "#", class: "btn-export-report", title: t("export_report") do %>
        <span class = "export-member primary">
          <i class="fa fa-download"></i>
        </span>
      <% end %>
      <%= link_to organization_path(@organization), remote: :true,
        class: "btn btn-primary btn-sm" do %>
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        <%= t "back" %>
      <% end %>
    </div>
  </div>
  <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
     <div class="table-responsive">
      <div class="tab-content current" id="pending">
        <% if @statistic_reports.report_pending.any? %>
          <%= render partial: "statistic_reports",
            locals: {statistic_reports: @statistic_reports.report_pending} %>
          <%= paginate @statistic_reports.report_pending, remote: :true %>
        <% else %>
          <tr class="text-center">
            <td colspan="<%= Settings.colspan_notice_empty %>">
              <h5 class="center notifi-empty"><%= t "edit_member.no_request" %></h5>
            </td>
          </tr>
        <% end %>
      </div>
      <div class="tab-content" id="approved">
        <% if @statistic_reports.report_approved.any? %>
          <%= render partial: "statistic_reports",
            locals: {statistic_reports: @statistic_reports.report_approved} %>
          <%= paginate @statistic_reports.report_approved, remote: :true %>
        <% else %>
          <tr class="text-center">
            <td colspan="<%= Settings.colspan_notice_empty %>">
              <h5 class="center notifi-empty"><%= t "edit_member.no_request" %></h5>
            </td>
          </tr>
        <% end %>
      </div>
      <div class="tab-content" id="rejected">
        <% if @statistic_reports.report_rejected.any? %>
          <%= render partial: "statistic_reports",
            locals: {statistic_reports: @statistic_reports.report_rejected} %>
          <%= paginate @statistic_reports.report_rejected, remote: :true %>
        <% else %>
          <tr class="text-center">
            <td colspan="<%= Settings.colspan_notice_empty %>">
              <h5 class="center notifi-empty"><%= t "edit_member.no_request" %></h5>
            </td>
          </tr>
        <% end %>
      </div>
      <div class="tab-content" id="not_report">
        <% if @clubs_not_report.any? %>
          <%= render partial: "view_club_not_report" %>
        <% else %>
          <tr class="text-center">
            <td colspan="<%= Settings.colspan_notice_empty %>">
              <h5 class="center notifi-empty"><%= t "edit_member.no_request" %></h5>
            </td>
          </tr>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div id="statistic-modal" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <%= render "modal" %>
</div>
<div id="modal-reason-reject" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <%= render "modal" %>
</div>
<%= javascript_include_tag "tabs" %>
<%= javascript_include_tag "export_report_members" %>
