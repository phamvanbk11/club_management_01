<%= javascript_include_tag "manager/select_tag",
  "data-turbolinks-track" => true %>
<div class="media-container media-container_custom height-350">
  <section class="site-section site-section-light site-section-top">
    <div class="container text-infomation bottom-25-percentage">
      <h1 class="animation-slideDown">
        <strong><%= @club.name %>
        </strong>
      </h1>
      <p class="h4 animation-slideUp hidden-xs">
        <%= @club.content %>
      </p>
    </div>
    <div class="container"></div>
  </section>
  <%= image_tag @club.logo, class: "media-image animation-pulseSlow" %>
</div>
<div class="col-md-12 tab_custom">
  <div class="col-md-6">
  </div>
  <div class="col-md-6 text-right">
    <%= link_to "#", remote: true,
      class: "btn btn-sm btn-primary btton-edit-organization animation-fadeIn360" do %>
      <i class="fa fa-pencil "></i> <%= t "edit_club" %>
    <% end %>
  </div>
  <ul class="nav nav-tabs col-md-10 col-md-offset-2" role="tablist">
    <li role="presentation">
      <%= link_to "#members_club", data: {toggle: "tab"} do %>
        <%= t("members") %>
        <span class="label label-primary label-indicator
          animation-floating" id="size-members">
          <%= @support.members_not_manager.size %>
        </span>
      <% end %>
    </li>
    <li role="presentation">
      <%= link_to "#managers_club", data: {toggle: "tab"} do %>
        <%= t("manager") %>
        <span class="label label-primary label-indicator
          animation-floating" id="size-admins">
          <%= @support.members_manager.size %>
        </span>
      <% end %>
    </li>
    <li role="presentation">
      <%= link_to "#user_request", data: {toggle: "tab"} do %>
        <%= t("namespace_admin.user_request") %>
        <span class="label label-primary label-indicator
          animation-floating" id="size-admins">
          <%= @support.user_requests.size %>
        </span>
      <% end %>
    </li>
  </ul>
</div>
<div id="page-content">
  <div class="row">
    <div class="col-md-12">
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="members_club">
          <div class="row block" id="content-tab-members">
            <%= render partial: "admin/user_clubs/list_member",
              locals: {members: @support.members_paginate, tab_admin: false} %>
          </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="managers_club">
          <div class="row block" id="content-tab-managers">
            <%= render partial: "admin/user_clubs/list_member",
              locals: {members: @support.managers_paginate, tab_admin: true} %>
          </div>
        </div>
        <div role="tabpanel" class="tab-pane fade in" id="user_request">
          <div class="row block" id="content-tab-requests">
            <%= render partial: "admin/user_clubs/list_request",
              locals: {members: @support.user_requests} %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="modal-organization" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
</div>
