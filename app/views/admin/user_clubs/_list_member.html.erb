<div class="row block-title">
  <% if tab_admin == false %>
    <div class="col-md-6 pad-5">
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#add-member-orgz"><%= t "namespace_admin.add_member" %></button>
    </div>
    <%= render "admin/user_clubs/modal_add_user_club" %>
  <% else %>
    <div class="col-md-6"></div>
  <% end %>
  <div class="col-md-6">
  </div>
</div>
<% if members.present? %>
  <div class="table-responsive">
    <table class="table table-vcenter table-condensed table-bordered">
      <thead>
        <tr>
          <th class="text-center"><i class="fa fa-user-o"></i></th>
          <th class="text-center"><%= t "full_name" %></th>
          <th class="text-center"><%= t "email" %></th>
          <th class="text-center"><%= t "admin_manage.member.date_join" %></th>
          <th class="text-center"><%= t "phone" %></th>
          <th class="text-center"><%= t "action" %></th>
        </tr>
      </thead>
      <tbody id="tab-admin-<%= tab_admin %>">
        <%= render partial: "admin/user_clubs/user_club", collection: members, as: :member %>
      </tbody>
    </table>
    <%= paginate members, params: {controller: "admin/user_clubs",
      club_id: @club.slug, action: "index",
      tab_admin: tab_admin}, remote: true  %>
  </div>
<% else %>
  <h4 class="center"><%= t "no_data" %></h4>
<% end %>
<%= javascript_include_tag "search_member" %>
