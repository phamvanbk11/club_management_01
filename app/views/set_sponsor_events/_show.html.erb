<div class="col-md-12">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title text-center">
          <%= t "sponsors.sponsors" %>&nbsp;
          <%= t "club" %>&nbsp;<%= @sponsor.club_name %>
        </h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="text-center col-md-12">
          <div class="row">
            <div class="list-infor-club inline-items col-md-6 offset-md-3">
              <strong><%= t "sponsors.event_name" %>:</strong>
              <span><%= @sponsor.name_event %></span>
            </div>
            <div class="list-infor-club inline-items col-md-3">
              <strong><%= t "status" %>:</strong>
              <span class="status-report-<%= @sponsor.status %>">
                <%= t"#{@sponsor.status}" %>
              </span>
            </div>
          </div>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.purpose_of_organization" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= raw(@sponsor.purpose) %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.time_and_place" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= l @sponsor.time, format: :short %></br>
              <%= @sponsor.place %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.organizational_units" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= @sponsor.organizational_units %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.participating_units" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= @sponsor.participating_units %>
            </span>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.experience" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= render partial: "sponsors/experience_detail", locals: {experience: @sponsor.experience} %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.regulations" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= raw(@sponsor.regulations) %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.prize" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= raw(@sponsor.prize) %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.expense" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= render partial: "sponsors/sponsor_details",
                locals: {sponsor_details: @sponsor.sponsor_details} %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.sponsor" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <label class="label-bold">
                <%= number_to_currency(@sponsor.sponsor, locals: :vi) %>
              </label>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.interest" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= raw(@sponsor.interest) %>
            </span><br/>
          </div>
          <div class="inline-items report-detail">
            <h6 class="title">
              <i class="fa fa-codepen"></i>
              <strong><%= t "sponsors.communication_plan" %>:</strong>
            </h6><br/>
            <span class="sponsor-detail">
              <%= raw(@sponsor.communication_plan) %>
            </span><br/>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= button_tag t("close"), class: "btn btn-sm btn-warning",
          "data-dismiss": "modal" %>
      </div>
    </div>
  </div>
</div>
