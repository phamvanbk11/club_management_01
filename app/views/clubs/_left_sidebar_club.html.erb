<div class="left_sidebar">
  <%= search_form_for @q, class: "form-horizontal" do |f| %>
    <div class="ui-block">
      <div class="ui-block-title">
        <h6 class="title"><%= t "page_my_clubs.search_club" %></h6>
      </div>
      <div class="ui-block-content">
        <div class="w-search custom_medium">
          <div class="form-group with-button">
            <%= f.text_field :name_or_content_cont,
              class: "form-control form-search-other-clubs", placeholder: t("name_des") %>
            <button>
              <svg class="olymp-magnifying-glass-icon"><use xlink:href="<%= url_to_asset("icons/icons.svg#olymp-magnifying-glass-icon") %>"></use></svg>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="ui-block">
      <div class="ui-block-title">
        <h6 class="title"><%= t "page_my_clubs.filters_organizations" %></h6>
      </div>
      <div class="ui-block-content">
        <div class="w-select">
          <fieldset class="form-group">
            <%= select_tag :stype_organizations,
              options_for_select(@organizations.map{|organization|
                [organization.name, organization.id]}
              .unshift([t("organization_filter"), nil]),
               include_blank: true),
              {class: "select_custom form-control stype-organizations-other-clubs"} %>
          </fieldset>
        </div>
      </div>
    </div>
    <div class="ui-block">
      <div class="ui-block-title">
        <h6 class="title"><%= t "page_my_clubs.filters_style_club" %></h6>
      </div>
      <div class="ui-block-content">
        <div class="w-select">
          <fieldset class="form-group">
            <%= select_tag :stype_clubs, options_for_select(
              @club_types.map{|u| ["#{u.name}"+" (#{u.organization_name})", u.id]}
                .unshift([t("style_filter"), nil]),
              include_blank: true),
              {class: "select_custom form-control stype-other-clubs"} %>
          </fieldset>
        </div>
      </div>
    </div>
    <div class="ui-block">
      <div class="ui-block-title">
        <h6 class="title"><%= t "page_my_clubs.filters_rating" %></h6>
      </div>
      <div class="ui-block-content filter_custom">
        <%= render "rate_filter" %>
      </div>
    </div>
    <div class="ui-block">
      <div class="ui-block-title">
        <h6 class="title"><%= t "page_my_clubs.oderby_time" %></h6>
      </div>
      <div class="ui-block-content">
        <%= select_tag :sort_clubs, options_for_select(
          Settings.sort_clubs.map{|k, v| [t("#{k}"), v]}
            .unshift([t("sort_clubs"), nil]),
          include_blank: true),
          {class: "select_custom form-control sort-other-clubs"} %>
      </div>
    </div>
  <% end %>
</div>
