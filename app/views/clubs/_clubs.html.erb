<% clubs.each do |club| %>
  <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12 list-club">
    <div class="ui-block">
      <div class="friend-item">
        <div class="friend-header-thumb">
          <%= set_image_in_list_club club %>
        </div>
        <div class="friend-item-content">
          <div class="show-club-avatar friend-avatar">
            <div class="author-content">
              <%= link_to organization_club_path(club.organization.slug, club), class: "h5 author-name" do %>
                <%= club.name %>
              <% end %>
              <div class="detail_item">
                <div class="show-rating rating_club">
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                  <strong><%= club.rating.round Settings.round_float %></strong>
                  <%= t "for_ratings" %>
                </div>
                <div class="country">
                  <i class="fa fa-user-o" aria-hidden="true"></i>
                  <strong><%= club.user_clubs.joined.size %></strong><%= t "page_my_clubs.member" %>
                </div>
              </div>
            </div>
          </div>
          <div class="swiper-container cutom_hard_height">
            <% if club.is_active? %>
              <p>
                <%= club.content.truncate(Settings.truncate.club.description).html_safe unless club.content.nil? %>
              </p>
            <% else %>
              <%= link_to organization_club_path(club.organization.slug, club),
                class: "btn btn-breez" do %>
                <%= t "pause_club" %>
              <% end %>
            <% end %>
          </div>
          <% if params[:controller] == "organizations" && params[:q].blank? %>
            <%= link_to club_evaluates_path(club_id: club.slug), remote: true,
              class: "btn btn-breez" do %>
              <i class="fa fa-star font-size-16" aria-hidden="true"></i>
              <%= t "evaluates.title_link" %>
            <% end %>
            <%= link_to edit_setting_club_path(id: club.slug), remote: true,
              class: "btn btn-breez" do %>
              <i class="fa fa-cog font-size-15" aria-hidden="true"></i>
            <% end %>
            <%= link_to setting_club_path(id: club.slug), remote: true,
              class: "btn btn-breez" do %>
              <i class="fa fa-info font-size-15" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="col-md-12">
  <nav aria-label="Page navigation example">
    <%= paginate @clubs, remote: true %>
  </nav>
</div>
<div id="config-club" class="modal fade" role="dialog">
</div>
