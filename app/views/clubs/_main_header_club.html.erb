<div class="container">
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="ui-block">
        <div class="top-header top-header-favorit">
          <section class="top-header-thumb">
            <div class="col-md-12 edit-images-club">
              <% if @club.is_admin? current_user %>
                <div class="pull-right">
                  <%= link_to "#", data: {toggle: "dropdown"}, class: "edit-logo-organization" do %>
                    <i class="fa fa-camera" aria-hidden="true"></i>
                    <span class="animation-slideUp hidden-xs rating-container">
                      <%= t "update_background" %>
                    </span>
                  <% end %>
                  <ul class="drop-image dropdown-menu" role="menu" aria-labelledby="menu1">
                    <li>
                      <%= link_to edit_club_path(id: @club, tab: "image"), class: "set-image-club",
                        remote: :true do %>
                        <i class="fa fa-cloud-upload"></i>
                        <%= t "upload_photo" %>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to set_image_club_path(club_id: @club.id), class: "set-image-club",
                        remote: :true do %>
                        <i class="fa fa-picture-o"></i>
                        <%= t "choose_album" %>
                      <% end %>
                    </li>
                  </ul>
                </div>
              <% end %>
            </div>
            <%= set_image_background_club @club %>
            <div class="top-header-author col-md-9">
              <div class="author-thumb">
                <%= set_logo_club @club %>
                <% if @club.is_admin? current_user %>
                  <div class="edit-logo-club">
                    <%= link_to edit_club_path(id: @club, tab: "logo"), remote: :true,
                      class: "edit-logo" do %>
                      <i class="fa fa-camera" aria-hidden="true"></i>
                      <span class="animation-slideUp hidden-xs rating-container">
                        <%= t "update_logo" %>
                      </span>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="author-content">
                <p class="h3 author-name mrg-0"><%= @club.name %></p>
                <span class="animation-slideUp hidden-xs rating-container" id="rating-container-club">
                  <%= render "ratings/rating" %>
                </span>
              </div>
              <div class="pull-right">
                <%= render "button_leave_club" %>
              </div>
            </div>
          </section>
          <div class="profile-section">
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <ul class="profile-menu tab_list_detail_club">
                  <li>
                    <%= link_to t("club_activity"), "#event-noti", class: "active" %>
                  </li>
                  <li>
                    <%= link_to t("gallery"), "#image" %>
                  </li>
                  <li >
                    <%= link_to t("content_goal"), "#content_club" %>
                  </li>
                  <li >
                    <%= link_to t("plan_active"), "#plan" %>
                  </li>
                  <li>
                    <%= link_to t("rules"), "#rules_club" %>
                  </li>
                  <li>
                    <%= link_to t("spending"), "#event" %>
                  </li>
                  <% if current_user.user_clubs.joined.of_club(@club) %>
                    <li>
                      <%= link_to club_manager_club_statistic_reports_path(@club), remote: :true, class: "none-tab tab-reports" do %>
                        <%= t "statistic_report" %>
                      <% end %>
                    </li>
                  <% end %>
                  <% if @club.is_admin? current_user %>
                    <li>
                      <%= link_to club_sponsors_path(@club), remote: :true, class: "none-tab" do %>
                        <%= t "sponsors.sponsors" %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
              <div class="col-md-1 offset-md-1 pull-right">
                <% if @club.is_admin? current_user %>
                  <div class = "dropdown">
                    <%= link_to "#", data: {toggle: "dropdown"},
                      class: "btn-sm btn btn-breez edit-infor-club pull-right" do %>
                      <i class="fa fa-cog"></i><i class="fa fa-caret-down"></i>
                    <% end %>
                    <ul class="active-club dropdown-menu" role="menu" aria-labelledby="menu1">
                      <li>
                        <%= link_to edit_club_path(id: @club, tab: Settings.club.infor),
                          remote: :true, class: "set-image-club" do %>
                          <i class="fa fa-pencil-square-o"></i> <%= t "edit_infor_club" %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to new_club_sponsor_path(@club),
                          class: "set-image-club" do %>
                          <i class="fa fa-plus"></i> <%= t "sponsors.new_sponsor" %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to club_manager_evaluates_path(club_id: @club.slug), remote: true,
                          class: "set-image-club" do %>
                          <i class="fa fa-star-o"></i> <%= t "evaluates.evaluate" %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to club_manager_money_support_clubs_path(club_id: @club.slug), remote: true,
                          class: "set-image-club" do %>
                          <i class="fa fa-star-o"></i> <%= t "club_manager.money_support_clubs.link" %>
                        <% end %>
                      </li>
                      <li>
                        <% if @club.is_active %>
                          <%= link_to set_active_club_path(@club, active: Settings.club.not_active),
                            method: :patch, class: "set-image-club" do %>
                            <i class="fa fa-pause-circle-o"></i>
                            <%= t "pause_club" %>
                          <% end %>
                        <% else %>
                          <%= link_to set_active_club_path(@club, active: Settings.club.is_active),
                            method: :patch, class: "set-image-club" do %>
                            <i class="fa fa-play"></i>
                            <%= t "activated" %>
                          <% end %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="js-money-support-clubs" class="modal fade" role="dialog">
</div>
