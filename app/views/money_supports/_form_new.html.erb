<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title"><%= t ".title" %></h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="table-responsive">
      <table class="table ui-block table-pricing">
        <thead>
          <tr>
            <th class="text-center" colspan="<%= @range_supports.evaluate_point.size + 1 %>"><%= t ".members" %></th>
          </tr>
          <tr>
            <th class="text-center"><%= t ".points" %></th>
            <% @range_supports.evaluate_point.each do |range_support| %>
              <th class="text-center"><%= get_range_string(range_support) %></th>
            <% end %>
          </tr>
        </thead>
        <tbody id="js-list-money-supports">
          <% @range_supports.member.each do |range_support| %>
            <tr>
              <td class="text-center"><%= get_range_string(range_support) %></td>
              <% @range_supports.evaluate_point.each_with_index do |range, index| %>
                <td class="text-center" contenteditable="true"
                  data-point="<%= @range_supports.evaluate_point[index].id %>"
                  data-member="<%= range_support.id %>"></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= javascript_include_tag "money_support" %>
