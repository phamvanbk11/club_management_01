<div class="notification-event">
  <div class="notification-value">
    <span class="h6 notification-friend"><%= notification.owner_full_name %></span>
    <%= t "notification_report", status: t(notification.key.try(:downcase)) %>
    <span class="h6 notification-friend">
      <%= t notification.trackable_type.try(:downcase) %></span>
    <%= set_content_by_trackable notification %>
    <% if notification.container %>
      <%= t "of_club_title" %>
      <span class="h6 notification-friend"><%= notification.trackable.club_name %></span>,
      <%= t notification.container_type.try(:downcase) %>
      <strong><%= notification.container_name %></strong>
      </br><i class="fa fa-clock-o time_create" aria-hidden="true">
        <%= l notification.created_at, format: :short %></i>
    <% end %>
  </div>
</div>
