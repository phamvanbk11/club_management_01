<div class="header-spacer header-spacer_custom"></div>
<div class="container">
  <div class="row">
    <div class="col-xl-12 push-xl-0 col-lg-12 push-lg-0 col-md-12 col-sm-12 col-xs-12">
      <div class="ui-block">
        <article class="hentry post has-post-thumbnail thumb-full-width private-event">
          <div class="row">
            <div class="col-md-12">
              <div class="col-md-2 confirm-donate">
                <%= link_to club_path(@club), title: t("back"),
                  class: "btn btn-sm btn-primary" do %>
                  <i class="fa fa-arrow-left"></i>
                <% end %>
              </div>
              <div class="block-title">
                <h5 class="text-center"><strong><%= t "add_report" %>: <%= @club.name %></strong></h5>
              </div>
              <div id="form-new-report">
                <%= render "new_report" %>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</div>
<% if @report_categories.optional.blank? %>
  <%= javascript_include_tag "category_report" %>
<% end %>
<%= javascript_include_tag "statistic_report" %>
